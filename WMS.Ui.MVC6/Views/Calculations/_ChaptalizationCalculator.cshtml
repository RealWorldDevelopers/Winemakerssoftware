
@model WMS.Ui.Mvc6.Models.Calculations.ChaptalizationViewModel
<div id="chaptalizationpop"></div>
<div name="calcSugar" class="card">
   <div class="card-header bg-dark text-light"><h2>Chaptalization Sugar</h2></div>
   <div class="card-body">
      <div class="d-flex">
         <a  href="#chaptalizationpop" title="Chaptalization" data-toggle="popover" data-trigger="click" data-placement="bottom"
            data-content="The process of adding sugar to Must in order to increase the alcohol content after fermentation.">&#42;Chaptalization</a>
      </div>

      <form id="frmChaptalization">

         <fieldset>
            <legend class="sr-only">Unit of Measure Brix or Specific Gravity</legend>
            <div class="d-flex justify-content-center m-2">
               <div class="form-check-inline mr-4">
                  <label class="form-check-label">
                     <input id="Chaptalization_UseBrix" type="radio" class="form-check-input" name="optUomSugar" value="brix">Brix
                  </label>
               </div>
               <div class="form-check-inline mr-4">
                  <label class="form-check-label">
                     <input id="Chaptalization_UseSG" type="radio" class="form-check-input" name="optUomSugar" checked value="sg">Specific Gravity
                  </label>
               </div>
            </div>
         </fieldset>

         <fieldset>
            <legend class="sr-only">Unit of Measure kilograms per liter or pounds per gallon</legend>
            <div class="d-flex justify-content-center m-2">
               <div class="form-check-inline mr-4">
                  <label class="form-check-label">
                     <input id="UseMetric" type="radio" class="form-check-input" name="optUomVolume" value="metric">kg per liter
                  </label>
               </div>
               <div class="form-check-inline mr-4">
                  <label class="form-check-label">
                     <input id="UseImperial" type="radio" class="form-check-input" name="optUomVolume" checked value="imperial">lbs per gal
                  </label>
               </div>
            </div>
         </fieldset>

            <div class="row align-items-center">
               <div class="col p-0 mr-2 text-right">
                  <label class="m-0" asp-for="VolumeMustSugar"></label>
               </div>
               <div class="col p-0">
                  <input class="form-control text-right" inputmode="decimal" pattern="[0-9]*" type="text" asp-for="VolumeMustSugar" required maxlength="5" />
                  <span asp-validation-for="VolumeMustSugar" class="text-danger"></span>
               </div>
               <div class="col p-0 ml-2">
                  <div class="m-0" name="lblUomVolume">Gallon</div>
               </div>
            </div>

            <div class="row align-items-center">
               <div class="col p-0 mr-2 text-right">
                  <label class="m-0" asp-for="CurrentSugarReading"></label>
               </div>
               <div class="col p-0">
                  <input class="form-control text-right" inputmode="decimal" pattern="[0-9]*" type="text" asp-for="CurrentSugarReading" required maxlength="5" />
                  <span asp-validation-for="CurrentSugarReading" class="text-danger"></span>
               </div>
               <div class="col p-0 ml-2">
                  <div class="m-0" name="lblUomSugar">SG</div>
               </div>
            </div>

            <div class="row align-items-center">
               <div class="col p-0 mr-2 text-right">
                  <label class="m-0" asp-for="GoalSugar"></label>
               </div>
               <div class="col p-0">
                  <input class="form-control text-right" inputmode="decimal" pattern="[0-9]*" type="text" asp-for="GoalSugar" required maxlength="5" />
                  <span asp-validation-for="GoalSugar" class="text-danger"></span>
               </div>
               <div class="col p-0 ml-2">
                  <div class="m-0" name="lblUomSugar">SG</div>
               </div>
            </div>

            <div class="row align-items-center">
               <div class="col p-0 mr-2 text-right">
                  <label class="m-0" asp-for="Sugar"></label>
               </div>
               <div class="col p-0">
                  <input class="form-control text-right" type="text" asp-for="Sugar" readonly />
               </div>
               <div class="col p-0 ml-2">
                  <div class="m-0" name="lblUomWeight">Pounds</div>
               </div>
            </div>

            <div class="d-flex justify-content-center align-items-center">
               <button id="btnCalcSugar" class="btn btn-primary" type="button">Calculate</button>
            </div>

      </form>

   </div>
</div>
