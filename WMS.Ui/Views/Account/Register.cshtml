@model WMS.Ui.Models.Account.RegisterViewModel

<div class="card">
    <div class="card-header bg-secondary text-light">
        <h1>Create a New Account</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div>
                <h2>Help keep this site safe</h2>
                <p>Site accounts help keep out the bad guys. <br /> Creating an account lets us know that you are not he bad guy. <br />And of course it is <strong>FREE</strong></p>

                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div class="form-group">
                        <input class="form-control" asp-for="UserName" aria-label="UserName" placeholder="User Name" required maxlength="256" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="form-control" asp-for="FirstName" aria-label="First Name" placeholder="First Name (optional)" maxlength="100" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="form-control" asp-for="LastName" aria-label="Last Name" placeholder="Last Name (optional)" maxlength="100" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="form-control" asp-for="Email" aria-label="Email" placeholder="Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="form-control" asp-for="Password" aria-label="Password" placeholder="Password" required maxlength="100" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="form-control" asp-for="ConfirmPassword" aria-label="Confirm Password" placeholder="Confirm Password" required maxlength="100" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer"></div>
</div>