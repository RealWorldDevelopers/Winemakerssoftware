@model WMS.Ui.Models.Account.RequestPasswordResetViewModel
<div class="card" id="classification">
    <div class="card-header bg-secondary text-light">
        <h1>Request Password Reset</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <form asp-controller="Account" asp-action="SendPasswordResetLink" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <p>
                    Enter a valid user name below and press Request.  <br />
                    Instructions will be emailed to the address associated with the user.
                </p>
                <div class="form-group">
                    <input class="form-control" asp-for="UserName" aria-label="User Name" placeholder="User Name" required maxlength="256" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Request</button>
                </div>
            </form>
        </div>
    </div>
    <div class="card-footer"></div>
</div>

