@model WMS.Ui.Models.Calculations.TitrateNaOHViewModel

<div name="calcUtility" class="card">
   <div class="card-header bg-dark text-light"><h2>Titrate NaOH for Normality</h2></div>
   <div class="card-body">

      <form id="frmTitrateNaOH">

         <div class="row align-items-center">
            <div class="col p-0 mr-2 text-right">
               <label class="m-0" asp-for="KaPhVolume"></label>
            </div>
            <div class="col p-0">
               <input class="form-control text-right" inputmode="decimal" pattern="[0-9]*" type="text" asp-for="KaPhVolume" required maxlength="4" />
               <span asp-validation-for="KaPhVolume" class="text-danger"></span>
            </div>
            <div class="col p-0 ml-2">
               <div class="m-0">mL</div>
            </div>
         </div>

         <div class="row align-items-center">
            <div class="col p-0 mr-2 text-right">
               <label class="m-0" asp-for="KaPhNormal"></label>
            </div>
            <div class="col p-0">
               <input class="form-control text-right" inputmode="decimal" pattern="[0-9]*" type="text" asp-for="KaPhNormal" required maxlength="4" />
               <span asp-validation-for="KaPhNormal" class="text-danger"></span>
            </div>
            <div class="col p-0 ml-2">
               <div class="m-0">N</div>
            </div>
         </div>


         <div class="row align-items-center">
            <div class="col p-0 mr-2 text-right">
               <label class="m-0" asp-for="NaOHVolume"></label>
            </div>
            <div class="col p-0">
               <input class="form-control text-right" inputmode="decimal" pattern="[0-9]*" type="text" asp-for="NaOHVolume" required maxlength="4" />
               <span asp-validation-for="NaOHVolume" class="text-danger"></span>
            </div>
            <div class="col p-0 ml-2">
               <div class="m-0">mL</div>
            </div>
         </div>

         <div class="row align-items-center">
            <div class="col p-0 mr-2 text-right">
               <label class="m-0" asp-for="NaOHNormal"></label>
            </div>
            <div class="col p-0">
               <input class="form-control text-right" type="text" asp-for="NaOHNormal" readonly />
               <span asp-validation-for="NaOHNormal" class="text-danger"></span>
            </div>
            <div class="col p-0 ml-2">
               <div class="m-0">N</div>
            </div>
         </div>

         <div class="d-flex justify-content-center align-items-center">
            <button id="btnTitrateNaOH" class="btn btn-primary" type="button">Calculate</button>
         </div>

      </form>

   </div>
</div>
