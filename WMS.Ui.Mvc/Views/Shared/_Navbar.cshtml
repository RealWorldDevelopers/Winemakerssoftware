@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-lg bg-primary fixed-top">
   <div class="container">
      <a class="navbar-brand text-light" href="https://winemakerssoftware.com">Winemaker's Software</a>
      <button class="navbar-toggler  text-light" type="button" data-toggle="collapse" data-target="#collapsibleNavbar" aria-label="Menu">
         <span class="navbar-toggler-icon"><i class="fa fa-navicon"></i></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
         <ul class="nav navbar-nav">
            <li id="navHome" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "Home" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li id="navJournal" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "Journal" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="Journal" asp-action="Index">Journal</a>
            </li>
            <li id="navRecipes" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "Recipes" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
            </li>
            <li id="navYeast" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "YeastPicker" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="YeastPicker" asp-action="Index">Yeast Picker</a>
            </li>
            <li id="navConversions" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "Conversions" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="Conversions" asp-action="Index">Conversions</a>
            </li>
            <li id="navCalculations" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "Calculations" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="Calculations" asp-action="Index">Calculations</a>
            </li>
            <li id="navContact" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "Contact" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
            </li>
            <li id="navAbout" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "About" ? "nav-item active" : "nav-item")">
               <a class="nav-link text-light" asp-area="" asp-controller="About" asp-action="Index">About</a>
            </li>

            @if (SignInManager.IsSignedIn(User))
            {
               if (User.IsInRole("Admin"))
               {
                  <li id="navAdmin" class="@(Url.ActionContext.RouteData.Values["controller"].ToString() == "Admin" ? "nav-item active" : "nav-item")">
                     <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                  </li>
               }
            }


         </ul>
      </div>
   </div>
</nav>
